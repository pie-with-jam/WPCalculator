<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OperationButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">#323232</item>
    </style>

    <style name="NumberButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">#202020</item>
    </style>

    <style name="EqualsButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">#a5c502</item>
    </style>
</resources>