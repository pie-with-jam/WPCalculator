<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">#000000</item>
        <item name="autoSizeTextType">uniform</item> <!-- автоматический размер шрифта -->
        <item name="autoSizeMaxTextSize">32sp</item> <!-- Максимальный размер текста -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnWeight">1</item>
    </style>

    <!-- Стиль для кнопок операций -->
    <style name="OperationButton" parent="BaseButtonStyle">
        <item name="android:backgroundTint">#bebebe</item>
    </style>

    <!-- Стиль для числовых кнопок -->
    <style name="NumberButton" parent="BaseButtonStyle">
        <item name="android:backgroundTint">#dddddd</item>
    </style>

    <!-- Стиль для кнопки равенства -->
    <style name="EqualsButton" parent="BaseButtonStyle">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>
</resources>