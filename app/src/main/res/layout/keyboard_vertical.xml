<?xml version="1.0" encoding="utf-8"?>
 <androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    app:columnCount="4"
    app:rowCount="7">

        <!-- Кнопки -->
        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            android:text="C"
            app:layout_column="0"
            app:layout_row="1" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="1"
            app:layout_column="1"
            android:text="MC" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="1"
            app:layout_column="2"
            android:text="MR" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="1"
            app:layout_column="3"
            android:text="M+" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="2"
            app:layout_column="0"
            android:text="⌫" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="2"
            app:layout_column="1"
            android:text="±" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="2"
            app:layout_column="2"
            android:text="%" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="2"
            app:layout_column="3"
            android:text="÷" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="3"
            app:layout_column="0"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="3"
            app:layout_column="1"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="3"
            app:layout_column="2"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="3"
            app:layout_column="3"
            android:text="×" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="4"
            app:layout_column="0"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="4"
            app:layout_column="1"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="4"
            app:layout_column="2"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="4"
            app:layout_column="3"
            android:text="-" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="5"
            app:layout_column="0"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="5"
            app:layout_column="1"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="5"
            app:layout_column="2"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            style="@style/OperationButton"
            app:layout_row="5"
            app:layout_column="3"
            android:text="+" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="6"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            style="@style/NumberButton"
            app:layout_row="6"
            app:layout_column="2"
            android:text="." />

        <com.google.android.material.button.MaterialButton
            style="@style/EqualsButton"
            app:layout_row="6"
            app:layout_column="3"
            android:text="=" />

</androidx.gridlayout.widget.GridLayout>

