<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    app:columnCount="4"
    app:rowCount="7"
    tools:ignore="MissingClass">

       <!-- Кнопки -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear"
        style="@style/OperationButton"
        android:text="C"
        app:layout_column="0"
        app:layout_row="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_clear"
        style="@style/OperationButton"
        app:layout_row="1"
        app:layout_column="1"
        android:text="MC" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_recall"
        style="@style/OperationButton"
        app:layout_row="1"
        app:layout_column="2"
        android:text="MR" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_add"
        style="@style/OperationButton"
        app:layout_row="1"
        app:layout_column="3"
        android:text="M+" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_backspace"
        style="@style/OperationButton"
        app:layout_row="2"
        app:layout_column="0"
        android:text="⌫" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plus_minus"
        style="@style/OperationButton"
        app:layout_row="2"
        app:layout_column="1"
        android:text="±" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_percent"
        style="@style/OperationButton"
        app:layout_row="2"
        app:layout_column="2"
        android:text="%" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_divide"
        style="@style/OperationButton"
        app:layout_row="2"
        app:layout_column="3"
        android:text="÷" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        style="@style/NumberButton"
        app:layout_row="3"
        app:layout_column="0"
        android:text="7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        style="@style/NumberButton"
        app:layout_row="3"
        app:layout_column="1"
        android:text="8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        style="@style/NumberButton"
        app:layout_row="3"
        app:layout_column="2"
        android:text="9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiply"
        style="@style/OperationButton"
        app:layout_row="3"
        app:layout_column="3"
        android:text="×" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        style="@style/NumberButton"
        app:layout_row="4"
        app:layout_column="0"
        android:text="4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        style="@style/NumberButton"
        app:layout_row="4"
        app:layout_column="1"
        android:text="5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        style="@style/NumberButton"
        app:layout_row="4"
        app:layout_column="2"
        android:text="6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_subtract"
        style="@style/OperationButton"
        app:layout_row="4"
        app:layout_column="3"
        android:text="-" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        style="@style/NumberButton"
        app:layout_row="5"
        app:layout_column="0"
        android:text="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        style="@style/NumberButton"
        app:layout_row="5"
        app:layout_column="1"
        android:text="2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        style="@style/NumberButton"
        app:layout_row="5"
        app:layout_column="2"
        android:text="3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add"
        style="@style/OperationButton"
        app:layout_row="5"
        app:layout_column="3"
        android:text="+" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        style="@style/NumberButton"
        app:layout_row="6"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        android:text="0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_decimal"
        style="@style/NumberButton"
        app:layout_row="6"
        app:layout_column="2"
        android:text="." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_equals"
        style="@style/EqualsButton"
        android:text="="
        app:layout_column="3"
        app:layout_row="6" />

</androidx.gridlayout.widget.GridLayout>
